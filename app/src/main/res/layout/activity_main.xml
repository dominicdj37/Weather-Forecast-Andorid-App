<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeActivity">


    <TextView
            android:text="o"
            android:layout_height="0dp" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/tvTemp" android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/tvTemp" android:layout_width="wrap_content"
            android:textColor="@android:color/holo_blue_bright"/>
    <TextView
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/tvTemp"
            android:textColor="@android:color/holo_blue_bright"/>
    <TextView
            android:layout_width="0dp"
            android:id="@+id/tvCityName"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="72dp"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryDark" app:layout_constraintWidth_percent=".75"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.106"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/cityInput" android:backgroundTint="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/submitButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:hint="city"/>
    <Button
            android:text="Check Weather"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/submitButton"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintBaseline_toBaselineOf="@+id/cityInput"
            android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWeather"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="@+id/StatusImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvFeelsLike"
            app:autoSizeTextType="uniform" app:autoSizeMinTextSize="12sp" app:autoSizeMaxTextSize="14sp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@android:color/transparent"
            android:id="@+id/StatusImageView"
            android:scaleType="fitXY"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCityName" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/tvCityName"
            app:layout_constraintBottom_toBottomOf="@+id/tvCityName" app:layout_constraintDimensionRatio="1:1"/>
    <TextView
            android:id="@+id/tvTemp"
            app:autoSizeTextType="uniform"
            android:maxLines="1"
            android:gravity="center_horizontal" android:layout_width="0dp" android:layout_height="0dp"
            android:textColor="@android:color/holo_blue_bright" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHeight_percent=".2" tools:text="23"
            app:layout_constraintWidth_percent=".4"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvLocation"
            app:layout_constraintTop_toBottomOf="@+id/tvCityName" app:layout_constraintStart_toStartOf="@+id/tvCityName"
            app:layout_constraintEnd_toEndOf="@+id/tvCityName"
            app:autoSizeTextType="uniform"
            app:layout_constraintHorizontal_bias="0.54"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvFeelsLike" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cityInput"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/tvTemp" app:layout_constraintStart_toStartOf="@+id/tvTemp"
            app:layout_constraintHorizontal_bias="0.48"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tvTemp"/>
    <TextView
            android:text="WIND"
            android:layout_width="wrap_content"
            android:layout_height="19dp" android:id="@+id/textView7"
            app:autoSizeTextType="uniform" android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvWindSpeed"
            app:layout_constraintStart_toStartOf="@+id/tvWindSpeed"
            app:layout_constraintEnd_toEndOf="@+id/tvWindSpeed"
            app:layout_constraintHorizontal_bias="0.513" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="223Kmph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWindSpeed"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textViewWeather"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/tvTemp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.451"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="0dp"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_begin="106dp"/>
    <TextView
            android:text="cloudy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tvStatus"
            app:layout_constraintTop_toBottomOf="@+id/StatusImageView"
            app:layout_constraintStart_toEndOf="@+id/tvCityName" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/StatusImageView"
            app:layout_constraintBottom_toBottomOf="@+id/tvLocation" android:gravity="center"
            android:textColor="@color/colorAccent"/>
    <TextView
            android:text="200"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/tvwindDegrees"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWindSpeed"
            app:layout_constraintStart_toStartOf="@+id/tvWindSpeed" android:layout_marginStart="8dp"/>
    <TextView
            android:text="o"
            android:layout_height="0dp" android:id="@+id/textView11"
            android:textSize="8sp"
            android:layout_width="wrap_content"
            android:textColor="@android:color/holo_blue_bright"
            app:layout_constraintStart_toEndOf="@+id/tvwindDegrees"
            app:layout_constraintTop_toTopOf="@+id/tvwindDegrees"
            app:layout_constraintBottom_toBottomOf="@+id/tvwindDegrees"
            app:layout_constraintVertical_bias="0.0"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/tvWindHeading"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/textView11" tools:text="sdd"
            app:layout_constraintEnd_toEndOf="@+id/tvWindSpeed" android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="59"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tvHumidity" app:layout_constraintStart_toEndOf="@+id/tvTemp"
            android:layout_marginStart="8dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintHeight_percent=".1" android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="@+id/tvTemp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTemp"/>
    <TextView
            android:text="HUMIDITY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvHumidity"
            app:layout_constraintStart_toStartOf="@+id/tvHumidity" app:layout_constraintEnd_toEndOf="@+id/tvHumidity"
            android:textColor="@color/colorPrimaryDark" app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/tvHumidity" android:gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timetextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/cityInput"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewWeather"
            android:textSize="30sp"/>

</android.support.constraint.ConstraintLayout>