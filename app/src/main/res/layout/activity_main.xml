<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/inputLayout" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="10dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="City"
                android:ems="10"
                android:id="@+id/cityInput" android:layout_weight="1" android:backgroundTint="@color/colorAccent"/>
        <Button
                android:text="Check Weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/submitButton" android:layout_weight="1"
                android:backgroundTint="@color/colorAccent"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWeather"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/inputLayout" android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/StatusImageView" android:layout_below="@+id/textViewWeather"
            android:scaleType="fitXY" android:layout_marginTop="10dp" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/webView1"
            android:layout_below="@+id/StatusImageView">
    </WebView>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@+id/StatusImageView">
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar1" android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>